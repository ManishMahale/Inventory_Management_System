<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <style>
        body {
            background-image: url("/Content/themes/base/images/InventoryManagement_Hero@3x.png");
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
        }

        div {
            background-color: rgba(255, 255, 255,0.7);
        }
        h4 {
            text-align:center; 
            background-color:papayawhip;
            line-height:35px;
        }
        .col-md-10{
            width:300px; 
        }
        
        
    </style>

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#" ><h2 style="color:blueviolet"><b>
    @Html.ActionLink("Inventory Management System", "Index", "Home", new { }, new { @class = "nav-link active" })</b></h2></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link active" })
                            @*"Name to Display", "ActionName","ControllerName"*@
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Stock", "DisplayStock", "Purchase", new { }, new { @class = "nav-link active" })
                            @*"Name to Display", "ActionName","ControllerName"*@
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Manage Stock", "Index", "Purchase", new { }, new { @class = "nav-link active" })
                            @*"Name to Display", "ActionName","ControllerName"*@

                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Sales", "Index", "Sale", new { }, new { @class = "nav-link active" })
                            @*"Name to Display", "ActionName","ControllerName"*@
                        </li>
                    </ul>

                </div>
            </div>
        </nav>




        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Manish Mahale's  ASP.NET MVC Application</p>
            </footer>
        </div>

        @RenderSection("scripts", required: false)

    </div>
</body>
</html>
